<!-- Products -->
<section class="section products">
    <div class="title">
        <h2>Nouveaux produits</h2>
        <span>Choisissez parmi les marques de produits haut de gamme et économisez beaucoup d'argent.</span>
    </div>

    <div class="product-layout">
        {% for product in products %}
        <div class="product">
            <div class="img-container">
                <a href="{{ path('products') }}">
                    <img src="/uploads/{{ product.image }}" alt="{{ product.name }}" height="200px"/>
                </a>
                <a href="{{ path('add_to_cart', {'id' : product.id}) }}" class="addCart">
                    <i class="fas fa-shopping-cart"></i>
                </a>

                <ul class="side-icons">
                    <span><i class="fas fa-search"></i></span>
                    <span><i class="far fa-heart"></i></span>
                    <span><i class="fas fa-sliders-h"></i></span>
                </ul>
            </div>
            <div class="bottom">
                <a href="">{{ product.name }}</a>
                <div class="price">
                    <span>{{ (product.price / 100) |number_format(2) }} €</span>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</section>